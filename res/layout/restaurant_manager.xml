<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_weight="0.5"
                  android:gravity="center_vertical|center_horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_name"
                  android:id="@+id/textView3" android:layout_weight="0.3" android:textSize="20dp"
                  android:textStyle="bold"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editText3"
                  android:layout_weight="2" android:textSize="18dp"/>
    </LinearLayout>

    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Speichern"/>

</LinearLayout>